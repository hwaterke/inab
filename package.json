{
  "author": "Harold Waterkeyn",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hwaterke/inab.git"
  },
  "bugs": {
    "url": "https://github.com/hwaterke/inab/issues"
  },
  "homepage": "https://github.com/hwaterke/inab#readme",
  "scripts": {
    "preinstall": "./netlify.sh"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.12.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "prettier": "1.16.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn workspaces run lint-staged && cd ./native && yarn lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,scss,json,md,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --no-eslintrc -c .eslintrc-import-order.json --fix",
      "git add"
    ]
  }
}
